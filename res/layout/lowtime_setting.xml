<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    
	<!-- Thanks to this developer : http://androidadvice.blogspot.com/2010/10/tablelayout-columns-equal-width.html -->
	
    <TableRow>

        <TextView
            android1:id="@+id/wake"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_gravity="center"
            android1:layout_marginBottom="20dp"
            android1:layout_marginLeft="30dp"
            android1:layout_marginTop="18dp"
            android1:shadowColor="#222222"
            android1:shadowDx="1"
            android1:shadowDy="1"
            android1:shadowRadius="15"
            android1:text="LowTime Settings"
            android1:textColor="#efefef"
            android1:textSize="30sp" />
        
    </TableRow>
    
	<TableRow android:layout_marginBottom="10dp">
	    
	    <TimePicker
	        android:id="@+id/lowtimetime"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center" />
	    
	</TableRow>

	<TableRow android1:layout_marginBottom="10dp" >

	    <TextView
	        android1:id="@+id/timespan"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android1:layout_height="wrap_content"
	        android1:layout_gravity="left"
	        android1:text="Time Span" />

	    <Spinner
	        android1:id="@+id/minutes"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android1:layout_height="wrap_content"
	        android1:layout_marginRight="30dp"
	        android1:entries="@array/lowtime_minute_select"
	        android1:prompt="@string/lowtime_minute_prompt" />

	</TableRow>
	
	<TableRow>
	    
	    <Button
	        android:id="@+id/waketone_button"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="Set Wake Tone" />
	
	    <TextView
	        android:id="@+id/waketone"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:layout_gravity="left"
	        android:text="---" />
	    
	</TableRow>
	
	<TableRow android:layout_marginTop="30dp">
	    
	    <Button
	        android:id="@+id/cancel"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="Cancel" />

	    <Button
	        android:id="@+id/save"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:text="Save" />
	    
	</TableRow>
    
</TableLayout>

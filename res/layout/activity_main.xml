<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/mainbackground">

    <TimePicker
        android:id="@+id/lowtimetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lowtimetime"
        android:layout_alignRight="@+id/lowtimetime"
        android:layout_below="@+id/lowtimetime"
        android:layout_marginTop="10dp"
        android:entries="@array/lowtime_minute_select"
        android:prompt="@string/lowtime_minute_prompt" />

    <!-- 
    <TextView
        android:id="@+id/sleeptone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sleeptone_button"
        android:layout_alignBottom="@+id/sleeptone_button"
        android:layout_alignLeft="@+id/waketone"
        android:text="" />
 	-->
 
    <TextView
        android:id="@+id/waketone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/waketone_button"
        android:layout_alignBottom="@+id/waketone_button"
        android:layout_alignRight="@+id/save"
        android:text="---" />


    <!-- 
    <Button
        android:id="@+id/sleeptone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes"
        android:layout_below="@+id/minutes"
        android:text="Set Sleep Tone" />
     -->

    <Button
        android:id="@+id/waketone_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minutes"
        android:layout_below="@+id/minutes"
        android:text="Set Wake Tone" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waketone_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Activate LowTime" />

</RelativeLayout>
